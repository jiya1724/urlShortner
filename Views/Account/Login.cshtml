@model UrlShortener.Models.LoginViewModel

@{
    ViewData["Title"] = "Log In";
    Layout = "_Layout";
}

@section Styles {
    <link href="~/css/account.css" rel="stylesheet" asp-append-version="true" />
}

<div class="auth-page">
  <div class="auth-card">
    <h1>Welcome Back</h1>
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="auth-form">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div>
        <input asp-for="Email" placeholder="Email" class="form-input" />
        <span asp-validation-for="Email" class="input-validation-error"></span>
      </div>
      <div>
        <input asp-for="Password" placeholder="Password" class="form-input" />
        <span asp-validation-for="Password" class="input-validation-error"></span>
      </div>
      <button type="submit" class="btn-primary">Log In</button>
    </form>
    <partial name="_ValidationScriptsPartial" />
    <p>
      New here?
      <a asp-controller="Account" asp-action="Register">Create an account</a>
    </p>
  </div>
</div>
