@{
    ViewData["Title"] = "Shorten a URL";
    Layout = "_Layout";
}

<div class="main-content">
    <div class="main-card">
        <h1>Shorten a URL</h1>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <input type="url" name="originalUrl" class="form-input" placeholder="Enter the original URL" required />
                <span  class="input-validation-error"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Shorten</button>
        </form>
    </div>
</div> 